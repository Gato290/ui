-- main.lua V0.1.0 - Chloe X UI Library (Complete)
-- Sebuah Library UI Modern untuk Roblox dengan dukungan Keybind, Icon, dan Config

local HttpService = game:GetService("HttpService")
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local CoreGui = game:GetService("CoreGui")
local MarketplaceService = game:GetService("MarketplaceService")

-- ===================== VARIABEL GLOBAL =====================
ConfigData = {}
CURRENT_VERSION = nil
CURRENT_CONFIG_NAME = "NexaHub"
DEFAULT_NOTIFY_SIZE = 320
Icons = {}
LucideIcons = {}
SolarIcons = {}
Colors = {}

-- ===================== LOAD EXTERNAL MODULES =====================

-- Load Color module
local successColor, ColorModule = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/Gato290/ui/refs/heads/main/Elements/color.lua"))()
end)

if successColor and type(ColorModule) == "table" then
    Colors = ColorModule
else
    warn("Failed to load Color module, using defaults")
    Colors = {
        Default = Color3.fromRGB(20, 20, 25),
        Light = Color3.fromRGB(240, 240, 240),
        Dark = Color3.fromRGB(10, 10, 15),
        Blue = Color3.fromRGB(0, 162, 255),
        Red = Color3.fromRGB(255, 50, 50),
        Green = Color3.fromRGB(50, 255, 50),
        Purple = Color3.fromRGB(160, 50, 255),
        Orange = Color3.fromRGB(255, 130, 50),
        Pink = Color3.fromRGB(255, 50, 150),
        Yellow = Color3.fromRGB(255, 255, 50)
    }
end

-- Load Elements module
local ElementsModule = nil
local successElements = pcall(function()
    ElementsModule = loadstring(game:HttpGet("https://raw.githubusercontent.com/Gato290/ui/refs/heads/main/Elements/Elements.lua"))()
end)

if not successElements or not ElementsModule then
    warn("Failed to load Elements module")
    return
end

