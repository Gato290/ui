    -- ===================== TABS SYSTEM =====================
    
    local Tabs = {}
    local CountTab = 0
    local CountDropdown = 0
    
    function Tabs:AddTab(TabConfig)
        local TabConfig = TabConfig or {}
        TabConfig.Name = TabConfig.Name or "Tab"
        TabConfig.Icon = TabConfig.Icon or ""

        -- Buat scrolling frame untuk konten tab
        local ScrolLayers = Instance.new("ScrollingFrame")
        local UIListLayout1 = Instance.new("UIListLayout")

        ScrolLayers.ScrollBarImageColor3 = Color3.fromRGB(80, 80, 80)
        ScrolLayers.ScrollBarThickness = 0
        ScrolLayers.Active = true
        ScrolLayers.LayoutOrder = CountTab
        ScrolLayers.BackgroundTransparency = 1
        ScrolLayers.BorderSizePixel = 0
        ScrolLayers.Size = UDim2.new(1, 0, 1, 0)
        ScrolLayers.Name = "ScrolLayers"
        ScrolLayers.Parent = LayersFolder

        UIListLayout1.Padding = UDim.new(0, 3)
        UIListLayout1.SortOrder = Enum.SortOrder.LayoutOrder
        UIListLayout1.Parent = ScrolLayers

        -- Buat tab button
        local Tab = Instance.new("Frame")
        local UICorner3 = Instance.new("UICorner")
        local TabButton = Instance.new("TextButton")
        local TabName = Instance.new("TextLabel")
        local FeatureImg = Instance.new("ImageLabel")
        local UIStroke2 = Instance.new("UIStroke")
        local UICorner4 = Instance.new("UICorner")

        Tab.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        Tab.BackgroundTransparency = (CountTab == 0) and 0.92 or 0.999
        Tab.BorderSizePixel = 0
        Tab.LayoutOrder = CountTab
        Tab.Size = UDim2.new(1, 0, 0, 30)
        Tab.Name = "Tab"
        Tab.Parent = ScrollTab

        UICorner3.CornerRadius = UDim.new(0, 4)
        UICorner3.Parent = Tab

        TabButton.Font = Enum.Font.GothamBold
        TabButton.Text = ""
        TabButton.BackgroundTransparency = 1
        TabButton.BorderSizePixel = 0
        TabButton.Size = UDim2.new(1, 0, 1, 0)
        TabButton.Name = "TabButton"
        TabButton.Parent = Tab

        TabName.Font = Enum.Font.GothamBold
        TabName.Text = "| " .. tostring(TabConfig.Name)
        TabName.TextColor3 = Color3.fromRGB(255, 255, 255)
        TabName.TextSize = 13
        TabName.TextXAlignment = Enum.TextXAlignment.Left
        TabName.BackgroundTransparency = 1
        TabName.BorderSizePixel = 0
        TabName.Size = UDim2.new(1, 0, 1, 0)
        TabName.Position = UDim2.new(0, 30, 0, 0)
        TabName.Name = "TabName"
        TabName.Parent = Tab

        -- Icon tab
        FeatureImg.BackgroundTransparency = 1
        FeatureImg.BorderSizePixel = 0
        FeatureImg.Position = UDim2.new(0, 9, 0, 7)
        FeatureImg.Size = UDim2.new(0, 16, 0, 16)
        FeatureImg.Name = "FeatureImg"
        FeatureImg.Parent = Tab
        
        local iconImage = getIcon(TabConfig.Icon)
        if iconImage ~= "" then
            FeatureImg.Image = iconImage
        end

        -- Tab pertama mendapat indikator khusus
        if CountTab == 0 then
            LayersPageLayout:JumpToIndex(0)
            NameTab.Text = TabConfig.Name
            local ChooseFrame = Instance.new("Frame")
            ChooseFrame.BackgroundColor3 = GuiConfig.Color
            ChooseFrame.BorderSizePixel = 0
            ChooseFrame.Position = UDim2.new(0, 2, 0, 9)
            ChooseFrame.Size = UDim2.new(0, 1, 0, 12)
            ChooseFrame.Name = "ChooseFrame"
            ChooseFrame.Parent = Tab

            UIStroke2.Color = GuiConfig.Color
            UIStroke2.Thickness = 1.6
            UIStroke2.Parent = ChooseFrame

            UICorner4.Parent = ChooseFrame
        end

        -- Tab click handler
        TabButton.Activated:Connect(function()
            CircleClick(TabButton, Mouse.X, Mouse.Y)
            local FrameChoose
            for _, s in ScrollTab:GetChildren() do
                for _, v in s:GetChildren() do
                    if v.Name == "ChooseFrame" then
                        FrameChoose = v
                        break
                    end
                end
            end
            
            if FrameChoose and Tab.LayoutOrder ~= LayersPageLayout.CurrentPage.LayoutOrder then
                -- Reset semua tab
                for _, TabFrame in ScrollTab:GetChildren() do
                    if TabFrame.Name == "Tab" then
                        TweenService:Create(
                            TabFrame,
                            TweenInfo.new(0.3, Enum.EasingStyle.Back, Enum.EasingDirection.InOut),
                            { BackgroundTransparency = 0.999 }
                        ):Play()
                    end
                end
                
                -- Highlight tab yang dipilih
                TweenService:Create(
                    Tab,
                    TweenInfo.new(0.6, Enum.EasingStyle.Back, Enum.EasingDirection.InOut),
                    { BackgroundTransparency = 0.92 }
                ):Play()
                
                -- Animasi indikator
                TweenService:Create(
                    FrameChoose,
                    TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                    { Position = UDim2.new(0, 2, 0, 9 + (33 * Tab.LayoutOrder)) }
                ):Play()
                
                LayersPageLayout:JumpToIndex(Tab.LayoutOrder)
                task.wait(0.05)
                NameTab.Text = TabConfig.Name
                
                TweenService:Create(
                    FrameChoose,
                    TweenInfo.new(0.35, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                    { Size = UDim2.new(0, 1, 0, 20) }
                ):Play()
                task.wait(0.2)
                TweenService:Create(
                    FrameChoose,
                    TweenInfo.new(0.25, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                    { Size = UDim2.new(0, 1, 0, 12) }
                ):Play()
            end
        end)
        
        -- ===================== SECTION SYSTEM =====================
        
        local Sections = {}
        local CountSection = 0
        
        function Sections:AddSection(SectionConfig)
            local SectionConfig = SectionConfig or {}
            local Title = SectionConfig.Title or "Title"
            local AlwaysOpen = SectionConfig.AlwaysOpen
            local Icon = SectionConfig.Icon or ""
            
            -- Buat frame section
            local Section = Instance.new("Frame")
            local SectionDecideFrame = Instance.new("Frame")
            local UICorner1 = Instance.new("UICorner")
            local UIGradient = Instance.new("UIGradient")

            Section.BackgroundTransparency = 1
            Section.BorderSizePixel = 0
            Section.LayoutOrder = CountSection
            Section.ClipsDescendants = true
            Section.Size = UDim2.new(1, 0, 0, 30)
            Section.Name = "Section"
            Section.Parent = ScrolLayers

            -- Section Real (header)
            local SectionReal = Instance.new("Frame")
            local UICornerSec = Instance.new("UICorner")
            local SectionButton = Instance.new("TextButton")
            local FeatureFrame = Instance.new("Frame")
            local FeatureImg = Instance.new("ImageLabel")
            local SectionIcon = Instance.new("ImageLabel")
            local SectionTitle = Instance.new("TextLabel")

            SectionReal.AnchorPoint = Vector2.new(0.5, 0)
            SectionReal.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            SectionReal.BackgroundTransparency = 0.935
            SectionReal.BorderSizePixel = 0
            SectionReal.LayoutOrder = 1
            SectionReal.Position = UDim2.new(0.5, 0, 0, 0)
            SectionReal.Size = UDim2.new(1, 1, 0, 30)
            SectionReal.Name = "SectionReal"
            SectionReal.Parent = Section

            UICornerSec.CornerRadius = UDim.new(0, 4)
            UICornerSec.Parent = SectionReal

            SectionButton.Font = Enum.Font.SourceSans
            SectionButton.Text = ""
            SectionButton.BackgroundTransparency = 1
            SectionButton.BorderSizePixel = 0
            SectionButton.Size = UDim2.new(1, 0, 1, 0)
            SectionButton.Name = "SectionButton"
            SectionButton.Parent = SectionReal

            -- Arrow indicator
            FeatureFrame.AnchorPoint = Vector2.new(1, 0.5)
            FeatureFrame.BackgroundTransparency = 1
            FeatureFrame.BorderSizePixel = 0
            FeatureFrame.Position = UDim2.new(1, -5, 0.5, 0)
            FeatureFrame.Size = UDim2.new(0, 20, 0, 20)
            FeatureFrame.Name = "FeatureFrame"
            FeatureFrame.Parent = SectionReal

            FeatureImg.Image = "rbxassetid://16851841101"
            FeatureImg.AnchorPoint = Vector2.new(0.5, 0.5)
            FeatureImg.BackgroundTransparency = 1
            FeatureImg.BorderSizePixel = 0
            FeatureImg.Position = UDim2.new(0.5, 0, 0.5, 0)
            FeatureImg.Rotation = -90
            FeatureImg.Size = UDim2.new(1, 6, 1, 6)
            FeatureImg.Name = "FeatureImg"
            FeatureImg.Parent = FeatureFrame

            -- Section icon
            SectionIcon.BackgroundTransparency = 1
            SectionIcon.BorderSizePixel = 0
            SectionIcon.Position = UDim2.new(0, 10, 0, 7)
            SectionIcon.Size = UDim2.new(0, 16, 0, 16)
            SectionIcon.Name = "SectionIcon"
            SectionIcon.Parent = SectionReal
            
            local sectionIconImage = getIcon(Icon)
            if sectionIconImage ~= "" then
                SectionIcon.Image = sectionIconImage
            else
                SectionIcon.Visible = false
            end

            -- Section title
            SectionTitle.Font = Enum.Font.GothamBold
            SectionTitle.Text = Title
            SectionTitle.TextColor3 = Color3.fromRGB(231, 231, 231)
            SectionTitle.TextSize = 13
            SectionTitle.TextXAlignment = Enum.TextXAlignment.Left
            SectionTitle.TextYAlignment = Enum.TextYAlignment.Top
            SectionTitle.AnchorPoint = Vector2.new(0, 0.5)
            SectionTitle.BackgroundTransparency = 1
            SectionTitle.BorderSizePixel = 0
            
            if sectionIconImage ~= "" then
                SectionTitle.Position = UDim2.new(0, 35, 0.5, 0)
                SectionTitle.Size = UDim2.new(1, -70, 0, 13)
            else
                SectionTitle.Position = UDim2.new(0, 10, 0.5, 0)
                SectionTitle.Size = UDim2.new(1, -50, 0, 13)
            end
            
            SectionTitle.Name = "SectionTitle"
            SectionTitle.Parent = SectionReal

            -- Decorative line
            SectionDecideFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            SectionDecideFrame.AnchorPoint = Vector2.new(0.5, 0)
            SectionDecideFrame.BorderSizePixel = 0
            SectionDecideFrame.Position = UDim2.new(0.5, 0, 0, 33)
            SectionDecideFrame.Size = UDim2.new(0, 0, 0, 2)
            SectionDecideFrame.Name = "SectionDecideFrame"
            SectionDecideFrame.Parent = Section

            UICorner1.Parent = SectionDecideFrame

            UIGradient.Color = ColorSequence.new {
                ColorSequenceKeypoint.new(0, Color3.fromRGB(20, 20, 20)),
                ColorSequenceKeypoint.new(0.5, GuiConfig.Color),
                ColorSequenceKeypoint.new(1, Color3.fromRGB(20, 20, 20))
            }
            UIGradient.Parent = SectionDecideFrame

            -- Section content container
            local SectionAdd = Instance.new("Frame")
            local UICorner8 = Instance.new("UICorner")
            local UIListLayout2 = Instance.new("UIListLayout")

            SectionAdd.AnchorPoint = Vector2.new(0.5, 0)
            SectionAdd.BackgroundTransparency = 1
            SectionAdd.BorderSizePixel = 0
            SectionAdd.ClipsDescendants = true
            SectionAdd.LayoutOrder = 1
            SectionAdd.Position = UDim2.new(0.5, 0, 0, 38)
            SectionAdd.Size = UDim2.new(1, 0, 0, 100)
            SectionAdd.Name = "SectionAdd"
            SectionAdd.Parent = Section

            UICorner8.CornerRadius = UDim.new(0, 2)
            UICorner8.Parent = SectionAdd

            UIListLayout2.Padding = UDim.new(0, 3)
            UIListLayout2.SortOrder = Enum.SortOrder.LayoutOrder
            UIListLayout2.Parent = SectionAdd

            local OpenSection = false

            -- Update ukuran scroll
            local function UpdateSizeScroll()
                local OffsetY = 0
                for _, child in ScrolLayers:GetChildren() do
                    if child.Name ~= "UIListLayout" then
                        OffsetY = OffsetY + 3 + child.Size.Y.Offset
                    end
                end
                ScrolLayers.CanvasSize = UDim2.new(0, 0, 0, OffsetY)
            end

            -- Update ukuran section
            local function UpdateSizeSection()
                if OpenSection then
                    local SectionSizeY = 38
                    for _, v in SectionAdd:GetChildren() do
                        if v.Name ~= "UIListLayout" and v.Name ~= "UICorner" then
                            SectionSizeY = SectionSizeY + v.Size.Y.Offset + 3
                        end
                    end
                    TweenService:Create(FeatureFrame, TweenInfo.new(0.5), { Rotation = 90 }):Play()
                    TweenService:Create(Section, TweenInfo.new(0.5), { Size = UDim2.new(1, 1, 0, SectionSizeY) }):Play()
                    TweenService:Create(SectionAdd, TweenInfo.new(0.5), { Size = UDim2.new(1, 0, 0, SectionSizeY - 38) }):Play()
                    TweenService:Create(SectionDecideFrame, TweenInfo.new(0.5), { Size = UDim2.new(1, 0, 0, 2) }):Play()
                    task.wait(0.5)
                    UpdateSizeScroll()
                end
            end

            -- Set initial state
            if AlwaysOpen == true then
                SectionButton:Destroy()
                FeatureFrame:Destroy()
                OpenSection = true
                UpdateSizeSection()
            elseif AlwaysOpen == false then
                OpenSection = true
                UpdateSizeSection()
            else
                OpenSection = false
            end

            -- Section click handler
            if AlwaysOpen ~= true then
                SectionButton.Activated:Connect(function()
                    CircleClick(SectionButton, Mouse.X, Mouse.Y)
                    if OpenSection then
                        TweenService:Create(FeatureFrame, TweenInfo.new(0.5), { Rotation = 0 }):Play()
                        TweenService:Create(Section, TweenInfo.new(0.5), { Size = UDim2.new(1, 1, 0, 30) }):Play()
                        TweenService:Create(SectionDecideFrame, TweenInfo.new(0.5), { Size = UDim2.new(0, 0, 0, 2) }):Play()
                        OpenSection = false
                        task.wait(0.5)
                        UpdateSizeScroll()
                    else
                        OpenSection = true
                        UpdateSizeSection()
                    end
                end)
            end

            -- If always open or forced open
            if AlwaysOpen == true or AlwaysOpen == false then
                OpenSection = true
                local SectionSizeY = 38
                for _, v in SectionAdd:GetChildren() do
                    if v.Name ~= "UIListLayout" and v.Name ~= "UICorner" then
                        SectionSizeY = SectionSizeY + v.Size.Y.Offset + 3
                    end
                end
                FeatureFrame.Rotation = 90
                Section.Size = UDim2.new(1, 1, 0, SectionSizeY)
                SectionAdd.Size = UDim2.new(1, 0, 0, SectionSizeY - 38)
                SectionDecideFrame.Size = UDim2.new(1, 0, 0, 2)
                UpdateSizeScroll()
            end

            -- Connect child events
            SectionAdd.ChildAdded:Connect(UpdateSizeSection)
            SectionAdd.ChildRemoved:Connect(UpdateSizeSection)

            -- Auto update canvas size
            local layout = ScrolLayers:FindFirstChildOfClass("UIListLayout")
            if layout then
                layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
                    ScrolLayers.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 10)
                end)
            end

            -- ===================== ELEMENTS =====================
            
            local Items = {}
            local CountItem = 0

            -- Paragraph element
            function Items:AddParagraph(ParagraphConfig)
                if ElementsModule.AddParagraph then
                    local result = ElementsModule.AddParagraph(SectionAdd, ParagraphConfig, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                end
            end

            -- Panel element
            function Items:AddPanel(PanelConfig)
                if ElementsModule.AddPanel then
                    local result = ElementsModule.AddPanel(SectionAdd, PanelConfig, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                end
            end

            -- Button element
            function Items:AddButton(ButtonConfig)
                if ElementsModule.AddButton then
                    ElementsModule.AddButton(SectionAdd, ButtonConfig, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                end
            end

            -- Toggle element
            function Items:AddToggle(ToggleConfig)
                if ElementsModule.AddToggle then
                    local result = ElementsModule.AddToggle(SectionAdd, ToggleConfig, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                end
            end

            -- Slider element
            function Items:AddSlider(SliderConfig)
                if ElementsModule.AddSlider then
                    local result = ElementsModule.AddSlider(SectionAdd, SliderConfig, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                end
            end

            -- Input element
            function Items:AddInput(InputConfig)
                if ElementsModule.AddInput then
                    local result = ElementsModule.AddInput(SectionAdd, InputConfig, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                end
            end

            -- Dropdown element
            function Items:AddDropdown(DropdownConfig)
                if ElementsModule.AddDropdown then
                    local result = ElementsModule.AddDropdown(
                        SectionAdd, DropdownConfig, CountItem, 
                        CountDropdown, MoreBlur, DropPageLayout, UpdateSizeSection
                    )
                    CountItem = CountItem + 1
                    CountDropdown = CountDropdown + 1
                    return result
                end
            end

            -- Keybind element (menggunakan module eksternal)
            function Items:AddKeybind(KeybindConfig)
                if KeybindModule and KeybindModule.CreateKeybind then
                    KeybindConfig = KeybindConfig or {}
                    KeybindConfig.SaveKey = true
                    KeybindConfig.ConfigData = ConfigData
                    KeybindConfig.SaveFunction = SaveConfig
                    
                    local result = KeybindModule.CreateKeybind(SectionAdd, KeybindConfig, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                else
                    warn("Keybind module not loaded! Cannot create keybind.")
                    return nil
                end
            end

            -- Divider element
            function Items:AddDivider()
                if ElementsModule.AddDivider then
                    local result = ElementsModule.AddDivider(SectionAdd, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                end
            end

            -- SubSection element
            function Items:AddSubSection(title)
                if ElementsModule.AddSubSection then
                    local result = ElementsModule.AddSubSection(SectionAdd, title, CountItem, UpdateSizeSection)
                    CountItem = CountItem + 1
                    return result
                end
            end

            CountSection = CountSection + 1
            return Items
        end

        CountTab = CountTab + 1
        return Sections
    end

    return Tabs
end

-- ===================== RETURN LIBRARY =====================

return Chloex
