    ScrollTab.CanvasSize = UDim2.new(0, 0, 1.10000002, 0)
    ScrollTab.ScrollBarImageColor3 = Color3.fromRGB(0, 0, 0)
    ScrollTab.ScrollBarThickness = 0
    ScrollTab.Active = true
    ScrollTab.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ScrollTab.BackgroundTransparency = 0.9990000128746033
    ScrollTab.BorderColor3 = Color3.fromRGB(0, 0, 0)
    ScrollTab.BorderSizePixel = 0
    ScrollTab.Size = UDim2.new(1, 0, 1, 0)
    ScrollTab.Name = "ScrollTab"
    ScrollTab.Parent = TabListSection

    UIListLayout.Padding = UDim.new(0, 3)
    UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    UIListLayout.Parent = ScrollTab

    local function UpdateSize1()
        local OffsetY = 0
        for _, child in ScrollTab:GetChildren() do
            if child.Name ~= "UIListLayout" then
                OffsetY = OffsetY + 3 + child.Size.Y.Offset
            end
        end
        ScrollTab.CanvasSize = UDim2.new(0, 0, 0, OffsetY)
    end
    ScrollTab.ChildAdded:Connect(UpdateSize1)
    ScrollTab.ChildRemoved:Connect(UpdateSize1)

    -- MODIFIKASI: Buat user profile menggunakan module terpisah
    if GuiConfig.ShowUser then
        -- Atur ulang ukuran untuk menampung search bar + tab list + user profile
        GlobalSearchSection.Size = UDim2.new(1, 0, 0, 45)
        TabListSection.Size = UDim2.new(1, 0, 0.6, -45)
        TabListSection.Position = UDim2.new(0, 0, 0, 45)
        
        -- Buat UserProfileSection
        local UserProfileSection = Instance.new("Frame")
        UserProfileSection.Name = "UserProfileSection"
        UserProfileSection.BackgroundTransparency = 1
        UserProfileSection.BorderSizePixel = 0
        UserProfileSection.Size = UDim2.new(1, 0, 0.4, 0)
        UserProfileSection.Position = UDim2.new(0, 0, 0.6, 0)
        UserProfileSection.Parent = CombinedLayersTab

        -- Frame pembatas
        local Divider = Instance.new("Frame")
        Divider.Name = "Divider"
        Divider.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        Divider.BackgroundTransparency = 0.5
        Divider.BorderSizePixel = 0
        Divider.Size = UDim2.new(1, -10, 0, 1)
        Divider.Position = UDim2.new(0, 5, 0, 0)
        Divider.Parent = UserProfileSection

        -- Buat user profile berdasarkan tipe yang dipilih
        local userProfile
        if GuiConfig.UserProfileType == "full" then
            userProfile = UserInfo.CreateUserProfile(UserProfileSection, true, GuiConfig.Uitransparent, GuiConfig.Color)
        else
            userProfile = UserInfo.CreateSimpleUserProfile(UserProfileSection, true, GuiConfig.Uitransparent, GuiConfig.Color)
        end
        
        GuiFunc.UserProfile = userProfile
    end

    function GuiFunc:DestroyGui()
        if CoreGui:FindFirstChild("Chloeex") then
            Chloeex:Destroy()
        end
    end
    
    function GuiFunc:SetTransparency(transparency)
        if transparency and transparency >= 0 and transparency <= 1 then
            applyUITransparency(Main, transparency)
            return true
        end
        return false
    end
    
    function GuiFunc:SetNotifySize(size)
        if size and type(size) == "number" and size >= 200 and size <= 800 then
            DEFAULT_NOTIFY_SIZE = size
            
            if CoreGui:FindFirstChild("NotifyGui") and CoreGui.NotifyGui:FindFirstChild("NotifyLayout") then
                CoreGui.NotifyGui.NotifyLayout.Size = UDim2.new(0, size, 1, 0)
                CoreGui.NotifyGui.NotifyLayout:SetAttribute("NotifySize", size)
            end
            return true
        end
        return false
    end

