    UserInfo = UserInfoModule
end

-- Fungsi untuk mendapatkan icon berdasarkan format
local function getIcon(iconString)
    if not iconString or iconString == "" then
        return ""
    end
    
    -- Cek format dengan prefix
    if iconString:find("^lucide:") then
        local iconName = iconString:sub(8) -- Hilangkan "lucide:" (7 karakter + :)
        return LucideIcons[iconName] or ""
    elseif iconString:find("^solar:") then
        local iconName = iconString:sub(7) -- Hilangkan "solar:" (6 karakter + :)
        return SolarIcons[iconName] or ""
    else
        -- Cek di Icons biasa (default)
        if Icons[iconString] then
            return Icons[iconString]
        else
            -- Jika bukan key di Icons, anggap sebagai asset ID langsung
            return iconString
        end
    end
end

local Elements = ElementsModule

-- Variabel global untuk config
local CURRENT_CONFIG_NAME = "NexaHub" -- Default value
ConfigData = {}
CURRENT_VERSION = nil
local ConfigFile = ""
local DEFAULT_NOTIFY_SIZE = 320 -- Default width untuk notifikasi

-- Fungsi-fungsi config yang akan diupdate berdasarkan Configname
function SaveConfig()
    if writefile and ConfigFile ~= "" then
        ConfigData._version = CURRENT_VERSION
        writefile(ConfigFile, HttpService:JSONEncode(ConfigData))
    end
end

function LoadConfigFromFile()
    if not CURRENT_VERSION or ConfigFile == "" then return end
    if isfile and isfile(ConfigFile) then
        local success, result = pcall(function()
            return HttpService:JSONDecode(readfile(ConfigFile))
        end)
        if success and type(result) == "table" then
            if result._version == CURRENT_VERSION then
                ConfigData = result
            else
                ConfigData = { _version = CURRENT_VERSION }
            end
        else
            ConfigData = { _version = CURRENT_VERSION }
        end
    else
        ConfigData = { _version = CURRENT_VERSION }
    end
end

function LoadConfigElements()
    for key, element in pairs(Elements.GetAll()) do
        if ConfigData[key] ~= nil and element.Set then
            element:Set(ConfigData[key], true)
        end
    end
end

local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local LocalPlayer = game:GetService("Players").LocalPlayer
local Mouse = LocalPlayer:GetMouse()
local CoreGui = game:GetService("CoreGui")
local viewport = workspace.CurrentCamera.ViewportSize

local function isMobileDevice()
    return UserInputService.TouchEnabled
        and not UserInputService.KeyboardEnabled
        and not UserInputService.MouseEnabled
end

local isMobile = isMobileDevice()

local function safeSize(pxWidth, pxHeight)
    local scaleX = pxWidth / viewport.X
    local scaleY = pxHeight / viewport.Y

    if isMobile then
        if scaleX > 0.5 then scaleX = 0.5 end
        if scaleY > 0.3 then scaleY = 0.3 end
    end

    return UDim2.new(scaleX, 0, scaleY, 0)
end

local function MakeDraggable(topbarobject, object)
    local function CustomPos(topbarobject, object)
        local Dragging, DragInput, DragStart, StartPosition

        local function UpdatePos(input)
            local Delta = input.Position - DragStart
            local pos = UDim2.new(
                StartPosition.X.Scale,
                StartPosition.X.Offset + Delta.X,
                StartPosition.Y.Scale,
                StartPosition.Y.Offset + Delta.Y
            )
            local Tween = TweenService:Create(object, TweenInfo.new(0.2), { Position = pos })
            Tween:Play()
        end

        topbarobject.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                Dragging = true
                DragStart = input.Position
                StartPosition = object.Position
                input.Changed:Connect(function()
                    if input.UserInputState == Enum.UserInputState.End then
                        Dragging = false
                    end
                end
                )
            end
        end)

        topbarobject.InputChanged:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
                DragInput = input
            end
        end)

        UserInputService.InputChanged:Connect(function(input)
            if input == DragInput and Dragging then
                UpdatePos(input)
            end
        end)
    end

    local function CustomSize(object)
        local Dragging, DragInput, DragStart, StartSize

        local minSizeX, minSizeY
        local defSizeX, defSizeY

        if isMobile then
            minSizeX, minSizeY = 100, 100
            defSizeX, defSizeY = 470, 270
        else
            minSizeX, minSizeY = 100, 100
            defSizeX, defSizeY = 640, 400
        end

        object.Size = UDim2.new(0, defSizeX, 0, defSizeY)

        local changesizeobject = Instance.new("Frame")
        changesizeobject.AnchorPoint = Vector2.new(1, 1)
        changesizeobject.BackgroundTransparency = 1
        changesizeobject.Size = UDim2.new(0, 40, 0, 40)
        changesizeobject.Position = UDim2.new(1, 20, 1, 20)
        changesizeobject.Name = "changesizeobject"
        changesizeobject.Parent = object

        local function UpdateSize(input)
            local Delta = input.Position - DragStart
            local newWidth = StartSize.X.Offset + Delta.X
            local newHeight = StartSize.Y.Offset + Delta.Y

            newWidth = math.max(newWidth, minSizeX)
            newHeight = math.max(newHeight, minSizeY)

            local Tween = TweenService:Create(object, TweenInfo.new(0.2), { Size = UDim2.new(0, newWidth, 0, newHeight) })
            Tween:Play()
        end

        changesizeobject.InputBegan:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
                Dragging = true
                DragStart = input.Position
                StartSize = object.Size
                input.Changed:Connect(function()
                    if input.UserInputState == Enum.UserInputState.End then
                        Dragging = false
                    end
                end)
            end
        end)

        changesizeobject.InputChanged:Connect(function(input)
            if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
                DragInput = input
            end
        end)

        UserInputService.InputChanged:Connect(function(input)
            if input == DragInput and Dragging then
                UpdateSize(input)
            end
        end)
    end

    CustomSize(object)
    CustomPos(topbarobject, object)
end

function CircleClick(Button, X, Y)
    spawn(function()
        Button.ClipsDescendants = true
        local Circle = Instance.new("ImageLabel")
        Circle.Image = "rbxassetid://266543268"
        Circle.ImageColor3 = Color3.fromRGB(80, 80, 80)
        Circle.ImageTransparency = 0.8999999761581421
        Circle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        Circle.BackgroundTransparency = 1
        Circle.ZIndex = 10
        Circle.Name = "Circle"
        Circle.Parent = Button

        local NewX = X - Circle.AbsolutePosition.X
        local NewY = Y - Circle.AbsolutePosition.Y
        Circle.Position = UDim2.new(0, NewX, 0, NewY)
        local Size = 0
        if Button.AbsoluteSize.X > Button.AbsoluteSize.Y then
            Size = Button.AbsoluteSize.X * 1.5
        elseif Button.AbsoluteSize.X < Button.AbsoluteSize.Y then
            Size = Button.AbsoluteSize.Y * 1.5
        elseif Button.AbsoluteSize.X == Button.AbsoluteSize.Y then
            Size = Button.AbsoluteSize.X * 1.5
        end

        local Time = 0.5
        Circle:TweenSizeAndPosition(UDim2.new(0, Size, 0, Size), UDim2.new(0.5, -Size / 2, 0.5, -Size / 2), "Out", "Quad",
            Time, false, nil)
        for i = 1, 10 do
            Circle.ImageTransparency = Circle.ImageTransparency + 0.01
            wait(Time / 10)
        end
        Circle:Destroy()
    end)
end

local Chloex = {}
function Chloex:MakeNotify(NotifyConfig)
    local NotifyConfig = NotifyConfig or {}
    NotifyConfig.Title = NotifyConfig.Title or "Chloe X"
    NotifyConfig.Description = NotifyConfig.Description or "Notification"
    NotifyConfig.Content = NotifyConfig.Content or "Content"
    NotifyConfig.Color = NotifyConfig.Color or Color3.fromRGB(255, 0, 255)
    NotifyConfig.Time = NotifyConfig.Time or 0.5
    NotifyConfig.Delay = NotifyConfig.Delay or 5
    NotifyConfig.Icon = NotifyConfig.Icon or ""
    NotifyConfig.NotifySize = NotifyConfig.NotifySize or DEFAULT_NOTIFY_SIZE
    NotifyConfig.Mini = NotifyConfig.Mini or false
    
    local NotifyFunction = {}
    spawn(function()
        if not CoreGui:FindFirstChild("NotifyGui") then
            local NotifyGui = Instance.new("ScreenGui");
            NotifyGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
            NotifyGui.Name = "NotifyGui"
            NotifyGui.Parent = CoreGui
        end
        if not CoreGui.NotifyGui:FindFirstChild("NotifyLayout") then
            local NotifyLayout = Instance.new("Frame");
            NotifyLayout.AnchorPoint = Vector2.new(1, 1)
            NotifyLayout.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
            NotifyLayout.BackgroundTransparency = 0.9990000128746033
            NotifyLayout.BorderColor3 = Color3.fromRGB(0, 0, 0)
            NotifyLayout.BorderSizePixel = 0
            NotifyLayout.Position = UDim2.new(1, -30, 1, -30)
            NotifyLayout.Size = UDim2.new(0, NotifyConfig.NotifySize, 1, 0)
            NotifyLayout.Name = "NotifyLayout"
            NotifyLayout.Parent = CoreGui.NotifyGui
            
            NotifyLayout:SetAttribute("NotifySize", NotifyConfig.NotifySize)
            
            local Count = 0
            CoreGui.NotifyGui.NotifyLayout.ChildRemoved:Connect(function()
                Count = 0
                for i, v in CoreGui.NotifyGui.NotifyLayout:GetChildren() do
                    TweenService:Create(
                        v,
                        TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.InOut),
                        { Position = UDim2.new(0, 0, 1, -((v.Size.Y.Offset + 12) * Count)) }
                    ):Play()
                    Count = Count + 1
                end
            end)
        else
            local currentSize = CoreGui.NotifyGui.NotifyLayout:GetAttribute("NotifySize") or DEFAULT_NOTIFY_SIZE
            if currentSize ~= NotifyConfig.NotifySize then
                CoreGui.NotifyGui.NotifyLayout.Size = UDim2.new(0, NotifyConfig.NotifySize, 1, 0)
                CoreGui.NotifyGui.NotifyLayout:SetAttribute("NotifySize", NotifyConfig.NotifySize)
            end
        end
        local NotifyPosHeigh = 0
        for i, v in CoreGui.NotifyGui.NotifyLayout:GetChildren() do
            NotifyPosHeigh = -(v.Position.Y.Offset) + v.Size.Y.Offset + 12
        end
        local NotifyFrame = Instance.new("Frame");
        local NotifyFrameReal = Instance.new("Frame");
        local UICorner = Instance.new("UICorner");
        local DropShadowHolder = Instance.new("Frame");
        local DropShadow = Instance.new("ImageLabel");
        local Top = Instance.new("Frame");
        local IconLabel = Instance.new("ImageLabel");
        local TextLabel = Instance.new("TextLabel");
        local UICorner1 = Instance.new("UICorner");
        local TextLabel1 = Instance.new("TextLabel");
        local Close = Instance.new("TextButton");
        local ImageLabel = Instance.new("ImageLabel");
        local TextLabel2 = Instance.new("TextLabel");

        NotifyFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        NotifyFrame.BorderColor3 = Color3.fromRGB(0, 0, 0)
        NotifyFrame.BorderSizePixel = 0
        NotifyFrame.Size = UDim2.new(1, 0, 0, 150)
        NotifyFrame.Name = "NotifyFrame"
        NotifyFrame.BackgroundTransparency = 1
        NotifyFrame.Parent = CoreGui.NotifyGui.NotifyLayout
        NotifyFrame.AnchorPoint = Vector2.new(0, 1)
        NotifyFrame.Position = UDim2.new(0, 0, 1, -(NotifyPosHeigh))

        NotifyFrameReal.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        NotifyFrameReal.BorderColor3 = Color3.fromRGB(0, 0, 0)
        NotifyFrameReal.BorderSizePixel = 0
        NotifyFrameReal.Position = UDim2.new(0, 400, 0, 0)
        NotifyFrameReal.Size = UDim2.new(1, 0, 1, 0)
        NotifyFrameReal.Name = "NotifyFrameReal"
        NotifyFrameReal.Parent = NotifyFrame

        UICorner.Parent = NotifyFrameReal
        UICorner.CornerRadius = UDim.new(0, 8)

        DropShadowHolder.BackgroundTransparency = 1
        DropShadowHolder.BorderSizePixel = 0
        DropShadowHolder.Size = UDim2.new(1, 0, 1, 0)
        DropShadowHolder.ZIndex = 0
        DropShadowHolder.Name = "DropShadowHolder"
        DropShadowHolder.Parent = NotifyFrameReal

        Top.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        Top.BackgroundTransparency = 0.9990000128746033
        Top.BorderColor3 = Color3.fromRGB(0, 0, 0)
        Top.BorderSizePixel = 0
        
        if NotifyConfig.Mini then
            Top.Size = UDim2.new(1, 0, 0, 24)
        else
            Top.Size = UDim2.new(1, 0, 0, 36)
        end
        Top.Name = "Top"
        Top.Parent = NotifyFrameReal

        if NotifyConfig.Icon and NotifyConfig.Icon ~= "" then
            local iconImage = getIcon(NotifyConfig.Icon)
            if iconImage ~= "" then
                IconLabel.Image = iconImage
                IconLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
                IconLabel.BackgroundTransparency = 1
                IconLabel.BorderColor3 = Color3.fromRGB(0, 0, 0)
                IconLabel.BorderSizePixel = 0
                
                if NotifyConfig.Mini then
                    IconLabel.Position = UDim2.new(0, 6, 0.5, -6)
                    IconLabel.Size = UDim2.new(0, 12, 0, 12)
                else
                    IconLabel.Position = UDim2.new(0, 10, 0.5, -8)
                    IconLabel.Size = UDim2.new(0, 16, 0, 16)
                end
                
                IconLabel.AnchorPoint = Vector2.new(0, 0.5)
                IconLabel.Name = "IconLabel"
                IconLabel.Parent = Top
            end
        end

        TextLabel.Font = Enum.Font.GothamBold
        
        if NotifyConfig.Mini then
            TextLabel.TextSize = 11
        else
            TextLabel.TextSize = 14
        end
        
        TextLabel.Text = NotifyConfig.Title
        TextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
        TextLabel.TextXAlignment = Enum.TextXAlignment.Left
        TextLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        TextLabel.BackgroundTransparency = 0.9990000128746033
        TextLabel.BorderColor3 = Color3.fromRGB(0, 0, 0)
        TextLabel.BorderSizePixel = 0
        TextLabel.Size = UDim2.new(1, -100, 1, 0)
        
        if NotifyConfig.Icon and NotifyConfig.Icon ~= "" and getIcon(NotifyConfig.Icon) ~= "" then
            if NotifyConfig.Mini then
                TextLabel.Position = UDim2.new(0, 24, 0, 0)
            else
                TextLabel.Position = UDim2.new(0, 35, 0, 0)
            end
        else
            if NotifyConfig.Mini then
                TextLabel.Position = UDim2.new(0, 6, 0, 0)
            else
                TextLabel.Position = UDim2.new(0, 10, 0, 0)
            end
        end
        TextLabel.Parent = Top

        UICorner1.Parent = Top
        UICorner1.CornerRadius = UDim.new(0, 5)

        TextLabel1.Font = Enum.Font.GothamBold
        
        if NotifyConfig.Mini then
            TextLabel1.TextSize = 10
        else
            TextLabel1.TextSize = 14
        end
        
        TextLabel1.Text = NotifyConfig.Description
        TextLabel1.TextColor3 = NotifyConfig.Color
        TextLabel1.TextXAlignment = Enum.TextXAlignment.Left
        TextLabel1.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        TextLabel1.BackgroundTransparency = 0.9990000128746033
        TextLabel1.BorderColor3 = Color3.fromRGB(0, 0, 0)
        TextLabel1.BorderSizePixel = 0
        TextLabel1.Size = UDim2.new(1, 0, 1, 0)
        
        local xOffset = TextLabel.TextBounds.X + 15
        if NotifyConfig.Icon and NotifyConfig.Icon ~= "" and getIcon(NotifyConfig.Icon) ~= "" then
            if NotifyConfig.Mini then
                xOffset = xOffset + 18
            else
                xOffset = xOffset + 25
            end
        end
        TextLabel1.Position = UDim2.new(0, xOffset, 0, 0)
        TextLabel1.Parent = Top

        Close.Font = Enum.Font.SourceSans
        Close.Text = ""
        Close.TextColor3 = Color3.fromRGB(0, 0, 0)
        Close.TextSize = 14
        Close.AnchorPoint = Vector2.new(1, 0.5)
        Close.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        Close.BackgroundTransparency = 0.9990000128746033
        Close.BorderColor3 = Color3.fromRGB(0, 0, 0)
        Close.BorderSizePixel = 0
        Close.Position = UDim2.new(1, -5, 0.5, 0)
        
        if NotifyConfig.Mini then
            Close.Size = UDim2.new(0, 20, 0, 20)
        else
            Close.Size = UDim2.new(0, 25, 0, 25)
        end
        
        Close.Name = "Close"
        Close.Parent = Top

        ImageLabel.Image = "rbxassetid://9886659671"
        ImageLabel.AnchorPoint = Vector2.new(0.5, 0.5)
        ImageLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        ImageLabel.BackgroundTransparency = 0.9990000128746033
        ImageLabel.BorderColor3 = Color3.fromRGB(0, 0, 0)
        ImageLabel.BorderSizePixel = 0
        ImageLabel.Position = UDim2.new(0.49000001, 0, 0.5, 0)
        
        if NotifyConfig.Mini then
            ImageLabel.Size = UDim2.new(1, -6, 1, -6)
        else
            ImageLabel.Size = UDim2.new(1, -8, 1, -8)
        end
        
        ImageLabel.Parent = Close

        TextLabel2.Font = Enum.Font.GothamBold
        TextLabel2.TextColor3 = Color3.fromRGB(255, 255, 255)
        
        if NotifyConfig.Mini then
            TextLabel2.TextSize = 11
        else
            TextLabel2.TextSize = 13
        end
        
        TextLabel2.Text = NotifyConfig.Content
        TextLabel2.TextXAlignment = Enum.TextXAlignment.Left
        TextLabel2.TextYAlignment = Enum.TextYAlignment.Top
        TextLabel2.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        TextLabel2.BackgroundTransparency = 0.9990000128746033
        TextLabel2.TextColor3 = Color3.fromRGB(150.0000062584877, 150.0000062584877, 150.0000062584877)
        TextLabel2.BorderColor3 = Color3.fromRGB(0, 0, 0)
        TextLabel2.BorderSizePixel = 0
        
        if NotifyConfig.Mini then
            TextLabel2.Position = UDim2.new(0, 6, 0, 22)
        else
            TextLabel2.Position = UDim2.new(0, 10, 0, 27)
        end
        
        TextLabel2.Parent = NotifyFrameReal
        TextLabel2.Size = UDim2.new(1, -20, 0, 13)

        local textBoundsX = TextLabel2.TextBounds.X
        local frameWidth = NotifyConfig.NotifySize - 40
        local linesNeeded = math.ceil(textBoundsX / frameWidth)
        
        local lineHeight = NotifyConfig.Mini and 11 or 13
        
        if linesNeeded > 1 then
            TextLabel2.Size = UDim2.new(1, -20, 0, lineHeight * linesNeeded)
        else
            TextLabel2.Size = UDim2.new(1, -20, 0, lineHeight)
        end
        TextLabel2.TextWrapped = true

        local contentHeight = TextLabel2.AbsoluteSize.Y
        local minHeight, maxHeight
        
        if NotifyConfig.Mini then
            minHeight = 45
            maxHeight = 150
        else
            minHeight = 65
            maxHeight = 250
        end
        
        local headerHeight = NotifyConfig.Mini and 24 or 36
        local finalHeight = contentHeight + headerHeight + 4
        
        if finalHeight < minHeight then
            finalHeight = minHeight
        elseif finalHeight > maxHeight then
            finalHeight = maxHeight
            local maxContentHeight = maxHeight - headerHeight - 10
            TextLabel2.Size = UDim2.new(1, -20, 0, maxContentHeight)
            TextLabel2.AutomaticSize = Enum.AutomaticSize.Y
        end
        
        NotifyFrame.Size = UDim2.new(1, 0, 0, finalHeight)
        
        local waitbruh = false
        function NotifyFunction:Close()
            if waitbruh then
                return false
            end
            waitbruh = true
            TweenService:Create(
                NotifyFrameReal,
                TweenInfo.new(tonumber(NotifyConfig.Time), Enum.EasingStyle.Back, Enum.EasingDirection.InOut),
                { Position = UDim2.new(0, 400, 0, 0) }
            ):Play()
            task.wait(tonumber(NotifyConfig.Time) / 1.2)
            NotifyFrame:Destroy()
        end

        Close.Activated:Connect(function()
            NotifyFunction:Close()
        end)
        TweenService:Create(
            NotifyFrameReal,
            TweenInfo.new(tonumber(NotifyConfig.Time), Enum.EasingStyle.Back, Enum.EasingDirection.InOut),
            { Position = UDim2.new(0, 0, 0, 0) }
        ):Play()
        task.wait(tonumber(NotifyConfig.Delay))
        NotifyFunction:Close()
    end)
    return NotifyFunction
end

function Notify(msg, delay, color, title, desc, icon, notifySize, mini)
    return Chloex:MakeNotify({
        Title = title or CURRENT_CONFIG_NAME,
        Description = desc or "Notification",
        Content = msg or "Content",
        Color = color or Color3.fromRGB(0, 208, 255),
        Delay = delay or 4,
        Icon = icon or "",
        NotifySize = notifySize or DEFAULT_NOTIFY_SIZE,
        Mini = mini or false
    })
end

function MiniNotify(msg, delay, color, title, desc, icon, notifySize)
    return Chloex:MakeNotify({
        Title = title or CURRENT_CONFIG_NAME,
        Description = desc or "Info",
        Content = msg or "Content",
        Color = color or Color3.fromRGB(0, 208, 255),
        Delay = delay or 3,
        Icon = icon or "",
        NotifySize = notifySize or 200,
        Mini = true
    })
end

local function applyUITransparency(mainObject, transparency)
    if not mainObject then return end
    
    if transparency and transparency >= 0 and transparency <= 1 then
        if mainObject:IsA("ImageLabel") then
            mainObject.ImageTransparency = transparency
        else
            mainObject.BackgroundTransparency = transparency
        end
    end
end

--=== GLOBAL SEARCH FEATURE ===--
-- Fungsi untuk membuat global search bar di atas tab list
local function CreateGlobalSearch(parent, windowRef, tabButtons, contentPages)
    -- Main container untuk search
    local SearchContainer = Instance.new("Frame")
    SearchContainer.Name = "GlobalSearchContainer"
    SearchContainer.BackgroundTransparency = 1
    SearchContainer.BorderSizePixel = 0
    SearchContainer.Size = UDim2.new(1, -20, 0, 35)
    SearchContainer.Position = UDim2.new(0, 10, 0, 5)
    SearchContainer.Parent = parent
    
    -- Search icon
    local SearchIcon = Instance.new("ImageLabel")
    SearchIcon.Name = "SearchIcon"
    SearchIcon.Image = "rbxassetid://6031094678"
    SearchIcon.BackgroundTransparency = 1
    SearchIcon.BorderSizePixel = 0
    SearchIcon.Size = UDim2.new(0, 16, 0, 16)
    SearchIcon.Position = UDim2.new(0, 8, 0.5, -8)
    SearchIcon.Parent = SearchContainer
    
    -- Search input field
    local SearchInput = Instance.new("TextBox")
    SearchInput.Name = "GlobalSearchInput"
    SearchInput.Font = Enum.Font.Gotham
    SearchInput.Text = ""
    SearchInput.PlaceholderText = "ðŸ” Search tabs, sections, settings..."
    SearchInput.TextSize = 13
    SearchInput.TextColor3 = Color3.fromRGB(255, 255, 255)
    SearchInput.PlaceholderColor3 = Color3.fromRGB(120, 120, 120)
    SearchInput.TextXAlignment = Enum.TextXAlignment.Left
    SearchInput.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    SearchInput.BackgroundTransparency = 0.3
    SearchInput.BorderSizePixel = 0
    SearchInput.Position = UDim2.new(0, 30, 0, 0)
    SearchInput.Size = UDim2.new(1, -65, 1, 0)
    SearchInput.Parent = SearchContainer
    SearchInput.ClearTextOnFocus = false
    
    local UICornerInput = Instance.new("UICorner")
    UICornerInput.CornerRadius = UDim.new(0, 6)
    UICornerInput.Parent = SearchInput
    
    -- Clear button
    local ClearButton = Instance.new("TextButton")
    ClearButton.Name = "ClearSearchButton"
    ClearButton.Font = Enum.Font.Gotham
    ClearButton.Text = "âœ•"
    ClearButton.TextSize = 16
    ClearButton.TextColor3 = Color3.fromRGB(200, 200, 200)
    ClearButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    ClearButton.BackgroundTransparency = 0.5
    ClearButton.BorderSizePixel = 0
    ClearButton.Position = UDim2.new(1, -30, 0, 0)
    ClearButton.Size = UDim2.new(0, 30, 1, 0)
    ClearButton.Visible = false
    ClearButton.Parent = SearchContainer
    
    local UICornerClear = Instance.new("UICorner")
    UICornerClear.CornerRadius = UDim.new(0, 6)
    UICornerClear.Parent = ClearButton
    
    -- No results overlay
    local NoResultsOverlay = Instance.new("Frame")
    NoResultsOverlay.Name = "NoResultsOverlay"
    NoResultsOverlay.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    NoResultsOverlay.BackgroundTransparency = 0.1
    NoResultsOverlay.BorderSizePixel = 0
    NoResultsOverlay.Size = UDim2.new(1, 0, 1, 0)
    NoResultsOverlay.Position = UDim2.new(0, 0, 0, 0)
    NoResultsOverlay.Visible = false
    NoResultsOverlay.ZIndex = 10
    NoResultsOverlay.Parent = parent.Parent -- Parent ke CombinedLayersTab
    
    local NoResultsLabel = Instance.new("TextLabel")
    NoResultsLabel.Name = "NoResultsLabel"
    NoResultsLabel.Font = Enum.Font.Gotham
    NoResultsLabel.Text = "No results found"
    NoResultsLabel.TextSize = 18
    NoResultsLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    NoResultsLabel.BackgroundTransparency = 1
    NoResultsLabel.BorderSizePixel = 0
    NoResultsLabel.Size = UDim2.new(1, 0, 0, 40)
    NoResultsLabel.Position = UDim2.new(0, 0, 0.4, -20)
    NoResultsLabel.ZIndex = 11
    NoResultsLabel.Parent = NoResultsOverlay
    
    local NoResultsSubLabel = Instance.new("TextLabel")
    NoResultsSubLabel.Name = "NoResultsSubLabel"
    NoResultsSubLabel.Font = Enum.Font.Gotham
    NoResultsSubLabel.Text = "Try different keywords"
    NoResultsSubLabel.TextSize = 14
    NoResultsSubLabel.TextColor3 = Color3.fromRGB(100, 100, 100)
    NoResultsSubLabel.BackgroundTransparency = 1
    NoResultsSubLabel.BorderSizePixel = 0
    NoResultsSubLabel.Size = UDim2.new(1, 0, 0, 30)
    NoResultsSubLabel.Position = UDim2.new(0, 0, 0.45, 10)
    NoResultsSubLabel.ZIndex = 11
    NoResultsSubLabel.Parent = NoResultsOverlay
    
    -- Store original visibility states
    local originalStates = {}
    
    -- Function to collect all searchable items
    local function collectSearchableItems()
        local items = {}
        
        -- Collect tabs
        for i, tabButton in ipairs(tabButtons) do
            if tabButton and tabButton.Parent then
                local tabName = tabButton:FindFirstChild("TabName")
                if tabName and tabName:IsA("TextLabel") then
                    table.insert(items, {
                        Type = "Tab",
                        Name = tabName.Text:gsub("| ", ""),
                        Element = tabButton.Parent,
                        TabButton = tabButton,
                        Page = contentPages[i],
                        Priority = 1
                    })
                end
            end
        end
        
        -- Collect sections and elements from all pages
        for pageIndex, page in ipairs(contentPages) do
            if page and page.Parent then
                local contentScroller = page:FindFirstChild("ContentScroller")
                if contentScroller then
                    for _, section in ipairs(contentScroller:GetChildren()) do
                        if section.Name == "Section" then
                            -- Collect section
                            local sectionReal = section:FindFirstChild("SectionReal")
                            if sectionReal then
                                local sectionTitle = sectionReal:FindFirstChild("SectionTitle")
                                if sectionTitle and sectionTitle:IsA("TextLabel") then
                                    table.insert(items, {
                                        Type = "Section",
                                        Name = sectionTitle.Text,
                                        Element = section,
                                        Section = section,
                                        Page = page,
                                        PageIndex = pageIndex,
                                        TabButton = tabButtons[pageIndex],
                                        Priority = 2
                                    })
                                end
                            end
                            
                            -- Collect elements in section
                            local sectionAdd = section:FindFirstChild("SectionAdd")
                            if sectionAdd then
                                for _, element in ipairs(sectionAdd:GetChildren()) do
                                    if element:IsA("Frame") and element.Name ~= "UICorner" and element.Name ~= "UIListLayout" then
                                        local elementName = ""
                                        local elementType = "Element"
                                        
                                        -- Check element type and get name
                                        local titleLabel = element:FindFirstChild("Title") or 
                                                         element:FindFirstChild("TextLabel") or
                                                         element:FindFirstChildOfClass("TextLabel")
                                        
                                        if titleLabel and titleLabel:IsA("TextLabel") then
                                            elementName = titleLabel.Text
                                        end
                                        
                                        -- Determine element type
                                        if element:FindFirstChild("Toggle") or element:FindFirstChild("ToggleButton") then
                                            elementType = "Toggle"
                                        elseif element:FindFirstChild("Slider") then
                                            elementType = "Slider"
                                        elseif element:FindFirstChild("Button") then
                                            elementType = "Button"
                                        elseif element:FindFirstChild("Dropdown") then
                                            elementType = "Dropdown"
                                        elseif element:FindFirstChild("Input") then
                                            elementType = "Input"
                                        end
                                        
                                        if elementName ~= "" then
                                            table.insert(items, {
                                                Type = elementType,
                                                Name = elementName,
                                                Element = element,
                                                Section = section,
                                                Page = page,
                                                PageIndex = pageIndex,
                                                TabButton = tabButtons[pageIndex],
                                                Priority = 3
                                            })
                                        end
                                    end
                                end
                            end
                        end
                    end
                end
            end
        end
        
        return items
    end
    
    -- Function to perform global search
    local function performGlobalSearch(query)
        query = query:lower():gsub("%s+", "")
        local hasResults = false
        local matchedItems = {}
        
        -- Hide all tabs and sections initially
        for _, tabButton in ipairs(tabButtons) do
            if tabButton and tabButton.Parent then
                tabButton.Parent.Visible = (query == "")
            end
        end
        
        for _, page in ipairs(contentPages) do
            if page and page.Parent then
                page.Visible = false
                
                local contentScroller = page:FindFirstChild("ContentScroller")
                if contentScroller then
                    for _, section in ipairs(contentScroller:GetChildren()) do
                        if section.Name == "Section" then
                            section.Visible = false
                            
                            local sectionAdd = section:FindFirstChild("SectionAdd")
                            if sectionAdd then
                                for _, element in ipairs(sectionAdd:GetChildren()) do
                                    if element:IsA("Frame") then
                                        element.Visible = false
                                    end
                                end
                            end
                        end
                    end
                end
            end
        end
        
        NoResultsOverlay.Visible = false
        
        if query == "" then
            -- Restore original visibility
            for _, tabButton in ipairs(tabButtons) do
                if tabButton and tabButton.Parent then
                    tabButton.Parent.Visible = true
                end
            end
            
            -- Show current page
            local currentPage = windowRef.GetCurrentPage and windowRef:GetCurrentPage()
            if currentPage then
                currentPage.Visible = true
            end
            
            ClearButton.Visible = false
            return
        end
        
        ClearButton.Visible = true
        
        -- Collect and search items
        local allItems = collectSearchableItems()
        local matchedTabs = {}
        local matchedSections = {}
        
        for _, item in ipairs(allItems) do
            if item.Name:lower():find(query, 1, true) then
                table.insert(matchedItems, item)
                
                if item.Type == "Tab" then
                    matchedTabs[item.TabButton] = true
                    hasResults = true
                elseif item.Type == "Section" then
                    matchedSections[item.Section] = true
                    if item.TabButton then
                        matchedTabs[item.TabButton] = true
                    end
                    hasResults = true
                else
                    -- Element
                    if item.Section then
                        matchedSections[item.Section] = true
                    end
                    if item.TabButton then
                        matchedTabs[item.TabButton] = true
                    end
                    hasResults = true
                end
            end
        end
        
        -- Show matched tabs
        for tabButton, _ in pairs(matchedTabs) do
            if tabButton and tabButton.Parent then
                tabButton.Parent.Visible = true
                
                -- Highlight tab
                local tabFrame = tabButton.Parent
                tabFrame.BackgroundTransparency = 0.85
                tabFrame.ZIndex = 5
            end
        end
        
        -- Show matched sections and their elements
        for section, _ in pairs(matchedSections) do
            if section and section.Parent then
                section.Visible = true
                
                -- Open section
                local sectionReal = section:FindFirstChild("SectionReal")
                if sectionReal then
                    local featureFrame = sectionReal:FindFirstChild("FeatureFrame")
                    if featureFrame then
                        featureFrame.Rotation = 90
                    end
                end
                
                -- Show matched elements in this section
                local sectionAdd = section:FindFirstChild("SectionAdd")
                if sectionAdd then
                    for _, item in ipairs(matchedItems) do
                        if item.Section == section and item.Type ~= "Section" and item.Type ~= "Tab" then
                            if item.Element and item.Element.Parent then
                                item.Element.Visible = true
                            end
                        end
                    end
                end
                
                -- Show the page containing this section
                for pageIndex, page in ipairs(contentPages) do
                    if page == section.Parent.Parent.Parent then -- Navigate up to page
                        page.Visible = true
                        -- Switch to this tab
                        if tabButtons[pageIndex] then
                            windowRef.SwitchToTab and windowRef:SwitchToTab(pageIndex)
                        end
                        break
                    end
                end
            end
        end
        
        -- Show no results overlay if no matches
        NoResultsOverlay.Visible = not hasResults and query ~= ""
        
        -- Update canvas sizes
        for _, page in ipairs(contentPages) do
            if page and page.Parent then
                local contentScroller = page:FindFirstChild("ContentScroller")
                if contentScroller then
                    local layout = contentScroller:FindFirstChildOfClass("UIListLayout")
                    if layout then
                        contentScroller.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 10)
                    end
                end
            end
        end
    end
    
    -- Connect search input events
    SearchInput:GetPropertyChangedSignal("Text"):Connect(function()
        performGlobalSearch(SearchInput.Text)
    end)
    
    SearchInput.FocusLost:Connect(function(enterPressed)
        if SearchInput.Text == "" then
            performGlobalSearch("")
        end
    end)
    
    -- Clear button functionality
    ClearButton.MouseButton1Click:Connect(function()
        SearchInput.Text = ""
        performGlobalSearch("")
        SearchInput:CaptureFocus()
    end)
    
    -- Keyboard shortcut: Ctrl+F to focus search
    UserInputService.InputBegan:Connect(function(input, gameProcessed)
        if not gameProcessed then
            if input.KeyCode == Enum.KeyCode.F and UserInputService:IsKeyDown(Enum.KeyCode.LeftControl) then
                SearchInput:CaptureFocus()
                SearchInput.Text = ""
            elseif input.KeyCode == Enum.KeyCode.Escape then
                if SearchInput.Text ~= "" then
                    SearchInput.Text = ""
                    performGlobalSearch("")
                else
                    SearchInput:ReleaseFocus()
                end
            end
        end
    end)
    
    -- Return search functions
    return {
        SetSearch = function(query)
            SearchInput.Text = query
            performGlobalSearch(query)
        end,
        Clear = function()
            SearchInput.Text = ""
            performGlobalSearch("")
        end,
        Focus = function()
            SearchInput:CaptureFocus()
        end,
        GetQuery = function()
            return SearchInput.Text
        end
    }
end
--=== END GLOBAL SEARCH FEATURE ===--

